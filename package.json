{
  "name": "node-red-diagrams-bridge",
  "version": "0.0.0",
  "description": "Push data to the DiagRAMS API with Node-RED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20.20"
  },
  "node-red": {
    "nodes": {
      "diagrams-bridge": "dist/index.js",
      "diagrams-credentials": "dist/credentials.js"
    }
  },
  "scripts": {
    "build": "rimraf 'dist' && tsc --outDir dist && cp src/*.html dist/ && cp -R src/icons dist/icons",
    "cover": "node --run jest -- --coverage",
    "format": "node --run prettier",
    "jest": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest",
    "lint": "eslint 'src/**/*.ts'",
    "precz": "node --run build && node --run lint && node --run test",
    "prepublish": "npm run build",
    "prettier": "prettier --write 'src/**/*.ts'",
    "preversion": "node --run build && node --run lint && node --run test",
    "rebuild": "swc ./src -s -d dist -C jsc.target=es2022",
    "test": "node --run jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "@swc/helpers": "^0.5.17",
    "@swc/jest": "^0.2.39",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "@types/node-red": "^1.3.5",
    "debug": "^4.4.3",
    "yerror": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DiagRAMS-Technologies/node-red-diagrams-bridge.git"
  },
  "keywords": [
    "node-red"
  ],
  "author": "The DV Group Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DiagRAMS-Technologies/node-red-diagrams-bridge/issues"
  },
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {}
      ]
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "prettierPath": null
  },
  "homepage": "https://github.com/DiagRAMS-Technologies/node-red-diagrams-bridge#readme"
}
